<h1 class="details-header">Details about the movie:</h1>
<div class="details-container">
    <div>
        <img src="{{image}}" alt="">
    </div>
    <div>
        <h2>{{title}}</h2>
        <h3>Director: {{director}}</h3>
        <h4>Stars: </h4>
        <ul>
            {{#each stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{description}}</p>
        {{#each showtimes}}
        <p class="showtime">{{this}}</p>
        <p class="showtime"> | </p>
        {{/each}}
    </div>
</div>
<a class="back-btn" href="/movies">Back</a>